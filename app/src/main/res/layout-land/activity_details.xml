<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/thumb"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        android:src="@drawable/belly" />
    <ScrollView
        android:layout_below="@id/thumb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/recipeName_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipe Name: "
                android:layout_below="@id/thumb"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Okro"
                android:id="@+id/recipeNameTV"
                android:layout_toRightOf="@id/recipeName_label"
                android:layout_below="@id/thumb"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/ingredientsName_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ingredients: "
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_below="@id/recipeName_label"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/fatsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fats: "
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_below="@id/proteins_label"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/proteins_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="proteins: "
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_below="@id/ingredientsName_label"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp" />



            <TextView
                android:id="@+id/description_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description"
                android:layout_below="@id/fatsTV"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/descriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/fatsTV"
                android:text="melon,fish, oil, fgdhhh,tyr,gyu
        fdfghgghg,ghghjjh.hfjfhgh,hgggggh,ghfgggf,"
                android:layout_toRightOf="@id/description_one"/>

        </LinearLayout>



    </ScrollView>


</LinearLayout>